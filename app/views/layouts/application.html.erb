  		<ul >
        <div class='nav-items to-left'>
  			<p>Reserve table</p>
  			<p>Contact Us</p>
  			<p>Menu</p>
        </div>
        <div class='nav-items to-center'>
  			<p>HOME</p>
        </div>
        <div class='nav-items to-right'>
  			<p>Roulette</p>
  			<p>Hours</p>
  			<p>Us</p>
        </div>
  		</ul> 
  	</nav>
    <% end %>
    <%= yield %>
    <footer>
    <img src="/assets/fb.png" alt='facebook logo'>
      <div class='footer-contents'>
        <p>Contact</p>
        <p class='bullet-point'>&#8226;</p>
        <p>Directions</p>
        <p class='bullet-point'>&#8226;</p>
        <p>Back to top</p>  
      </div>

      <p>&copy; 1999-2017, Los Bandidos</p>
    </footer>
  </body>
</html>
